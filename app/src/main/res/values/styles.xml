<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="main_activity_style" parent="NoTitleTheme">
        <item name="android:windowBackground">@mipmap/launch</item>
        <item name="android:background">@null</item>
    </style>

    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="AlphaDialogAct" parent="android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@anim/ac_slide_up_in</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowActionBar">false</item>
    </style>


    <style name="EditTextStyle">
        <item name="android:paddingLeft">20px</item>
        <item name="android:paddingRight">20px</item>
        <item name="android:background">@drawable/gray_round</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">45px</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--无状态栏-->
    <style name="NoTitleTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--引导页-->
    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>  //设置全屏
        <item name="android:windowNoTitle">true</item> //设置没有状态栏
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <!--字体居中-->
    <style name="gray_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="interval">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/interal</item>
    </style>

    
    <style name="button_word_evaluate">
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="dialog_review_text_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="dialog_review_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!--自定义dialog背景全透明无边框theme -->
    <style name="MyDialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">false</item>

        <item name="android:windowIsTranslucent">false</item><!--半透明-->
    </style>

    <!--复习听写练习-->
     <!--白色背景水平排列-->
    <style name="White_hor_center_lin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="center_vertical_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">50px</item>
    </style>

    <!--黑字-->
    <style name="center_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--绿字-->
    <style name="center_text_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/mainColor</item>
    </style>

    <!--白色字base-->
    <style name="white_text_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--25px-->
    <style name="white_text_40px" parent="white_text_base">
        <item name="android:textSize">35px</item>
    </style>
    <!--30px-->
    <style name="white_text_30px" parent="white_text_base">
        <item name="android:textSize">35px</item>
    </style>

    <!-- 50px-->
    <style name="white_text_50px" parent="white_text_base">
        <item name="android:textSize">60px</item>
    </style>

    <style name="white_text_90px" parent="white_text_base">
        <item name="android:textSize">90px</item>
    </style>
    <style name="white_text_60px_center_horizontal" parent="white_text_base">
        <item name="android:textSize">70px</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="yellow_text_30px_center_horizontal">
    </style>

    <style name="alert_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="wrapHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dip</item>
    </style>

    <style name="com_line" parent="line">
        <item name="android:background">@color/color_sec_gray</item>
    </style>

    <style name="title_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">@dimen/text_size_bl</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@null</item>
    </style>

    <!--clock-->
    <style name="FullScreenDialog" parent="android:Theme.Dialog">

        <!-- 窗口设为无标题 -->
        <item name="android:windowNoTitle">true</item>

        <!-- 窗口浮现在activity之上 -->
        <item name="android:windowIsFloating">false</item>

        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/title_transparent_black</item>

        <!-- 背景模糊 -->
        <item name="android:backgroundDimEnabled">true</item>

        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>

        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>

        <!-- 全屏 -->
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="horizontal_line_style">
        <item name="android:background">@color/line_and_outline_grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.4dp</item>
    </style>

    <style name="Theme_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <!--course  item-->
    <style name="course_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toRightOf">@id/course_img</item>
    </style>

    <style name="course_text" parent="wrap">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray_text</item>
    </style>

    <style name="linear_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="color_white" parent="wrap">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="center_text_re" parent="wrap">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="round_tab_title" parent="center_text_re">
        <item name="android:paddingStart">@dimen/border_space_sec</item>
        <item name="android:paddingEnd">@dimen/border_space_sec</item>
        <item name="android:paddingTop">2px</item>
        <item name="android:paddingBottom">2px</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="round_text" parent="center_text_re">
        <item name="android:layout_marginTop">@dimen/border_space_sec</item>
        <item name="android:maxLines">6</item>
    </style>


    <style name="Widget.SeekBar.Media" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:thumb">@drawable/media_thumb</item>

        <item name="android:maxHeight">2.5dp</item>
        <item name="android:minHeight">2.5dp</item>
        <item name="android:progressDrawable">@drawable/video_progressbar</item>
        <item name="android:thumbOffset">5dp</item>
    </style>

    <!--搜题-->
    <style name="custome_title_bar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/border_space_max_min</item>
        <item name="android:background">@color/black</item>
    </style>


    <style name="user_act_style" parent="wrap">
        <item name="android:layout_margin">@dimen/border_space_sec_max</item>
        <item name="android:src">@drawable/lr_back</item>
    </style>

    <style name="title_back" parent="user_act_style">
        <item name="android:onClick">leftBack</item>
    </style>

    <style name="black_bg_title_back" parent="title_back">
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:paddingLeft">@dimen/border_space_sec_max</item>
        <item name="android:paddingRight">@dimen/border_space_sec_max</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/icon_back</item>
    </style>


    <!--report-->
    <style name="report_lin">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="report_view">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">13dp</item>
    </style>

    <style name="report_text_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="report_title" parent="report_text_base">
        <item name="android:layout_marginLeft">3dp</item>
    </style>

    <style name="report_name" parent="report_text_base">
        <item name="android:layout_marginLeft">8dp</item>
    </style>


    <style name="report_view2">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">15dp</item>
    </style>


    <!--study-->
    <style name="study_rel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginLeft">50px</item>
        <item name="android:layout_marginRight">50px</item>
        <item name="android:background">@drawable/study_chose</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>


    <style name="study_title" parent="wrap">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="study_content" parent="wrap">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="study_img">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/study_chose_right</item>
    </style>

    <style name="study_green_right">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@mipmap/study_green</item>
        <item name="android:layout_marginLeft">38px</item>
        <item name="android:textColor">@color/white</item>
    </style>


