<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AutoZoomTextView">
        <attr name="is_auto_zoom"  format="boolean" />
    </declare-styleable>

    <declare-styleable name="WheelView">
        <attr name="itemVisibleNum" format="integer"/>

        <attr name="textColorOuter" format="color" />
        <attr name="textSizeOuter" format="dimension" />
        <attr name="textColorCenter" format="color" />
        <attr name="textSizeCenter" format="dimension" />

        <attr name="lineColor" format="color" />

        <attr name="isLoop" format="boolean"/>
        <attr name="lineSpaceingDimens" format="dimension"/>

        <attr name="wheelGravity" format="enum" >
            <enum name="left" value="234"/>
            <enum name="center" value="354"/>
            <enum name="right" value="894"/>
        </attr>

    </declare-styleable>
    
     <!--圆形进度条-->
    <declare-styleable name="LoadingCustomView">
        <attr name="progressBankgroundColor" format="color" />
        <attr name="progressColor" format="color" />
        <attr name="progress" format="float"/>
        <attr name="progressBarFrameHeight" format="dimension" />
        <attr name="progressBarBankgroundStyle" format="integer" />
    </declare-styleable>

    <declare-styleable name="DashView">
        <attr name="dashWidth" format="dimension" />
        <attr name="lineHeight" format="dimension" />
        <attr name="lineWidth" format="dimension"/>
        <attr name="lineColor" />
        <attr name="dashOrientation" format="integer" />
    </declare-styleable>


    <declare-styleable name="FlikerProgressBar">
        <attr name="textSize" format="dimension"/>

        <attr name="loadingColor" format="color"/>

        <attr name="stopColor" format="color"/>

        <attr name="radius" format="dimension"/>

        <attr name="borderWidth" format="dimension"/>

    </declare-styleable>


</resources>