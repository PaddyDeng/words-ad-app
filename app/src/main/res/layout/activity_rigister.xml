<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@mipmap/login_back"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">
        <ImageView
            android:id="@+id/back"
            android:src="@mipmap/white_back"
            android:layout_marginLeft="40px"
            android:layout_centerVertical="true"
            android:layout_width="50px"
            android:layout_height="50px" />
        <TextView
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:text="账号注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="200px"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/num_et"
            android:hint="请输入手机号/邮箱"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="120px" />
        <LinearLayout
            android:layout_marginTop="50px"
            android:layout_width="match_parent"
            android:layout_height="120px">
            <EditText
                android:id="@+id/code_et"
                android:layout_weight="2"
                android:hint="请输入验证码"
                style="@style/EditTextStyle"
                android:layout_width="0px"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/send"
                android:background="@drawable/blue_round"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="45px"
                android:text="获取验证码"
                android:layout_marginLeft="30px"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="match_parent" />
        </LinearLayout>
        <EditText
            android:id="@+id/pass_et"
            android:layout_marginTop="50px"
            android:hint="请输入密码"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="120px" />
        <TextView
            android:id="@+id/rigister"
            android:text="注 册"
            android:textColor="@color/white"
            android:textSize="70px"
            android:gravity="center"
            android:background="@drawable/login_btn"
            android:layout_marginTop="120px"
            android:layout_width="match_parent"
            android:layout_height="150px" />
        <LinearLayout
            android:layout_marginTop="50px"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/agree"
                android:background="@drawable/agree_select"
                android:layout_width="40px"
                android:layout_height="40px" />
            <TextView
                android:id="@+id/protocol"
                android:layout_marginLeft="30px"
                android:textSize="40px"
                android:textColor="@color/white"
                android:text="已经阅读并同意《用户协议》"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/to_login"
            android:textSize="40px"
            android:textColor="@color/white"
            android:text="已有账号？立即登入"
            android:layout_marginTop="80px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>