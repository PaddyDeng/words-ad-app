<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="thinku.com.word.ui.recite.AddMyPlanActivity">

    <include layout="@layout/title_layout_words" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="17sp"
        android:text="GMAT-OC教学教材"
        android:maxEms="20"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我计划"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/day"
            android:text="20"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="，每天背"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/num"
            android:text="20"
            android:gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个单词"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:layout_marginTop="100px"
            android:layout_marginBottom="120px"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/num_of_day"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="45px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:background="@drawable/main_10round_tv"
                android:layout_width="match_parent"
                android:layout_height="100px" />
            <RelativeLayout
                android:layout_marginTop="30px"
                android:background="@drawable/gray_20round"
                android:layout_width="match_parent"
                android:id="@+id/wheelView_rl"
                android:layout_height="match_parent">
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:layout_marginTop="100px"
            android:layout_marginBottom="120px"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/num_of_word"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="45px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:background="@drawable/main_10round_tv"
                android:layout_width="match_parent"
                android:layout_height="100px" />
            <RelativeLayout
                android:layout_marginTop="30px"
                android:background="@drawable/gray_20round"
                android:id="@+id/wheelView_r2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </RelativeLayout>
        </LinearLayout>
</LinearLayout>
</LinearLayout>