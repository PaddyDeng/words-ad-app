<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">
    <include layout="@layout/title_layout_share"/>
    <TextView
        android:textSize="50px"
        android:text="请选择某时间内背的单词"
        android:layout_marginTop="100px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="100px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="开始时间"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0px"
            android:layout_height="wrap_content" />
        <TextView
            android:text="截止时间"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0px"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20px"
        android:layout_marginLeft="120px"
        android:layout_marginRight="120px"
        android:layout_width="match_parent"
        android:layout_height="900px">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0px"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/start_time"
                android:textSize="45px"
                android:textColor="@color/white"
                android:text="2018.01.21"
                android:gravity="center"
                android:background="@drawable/main_10round_tv"
                android:layout_width="match_parent"
                android:layout_height="100px" />
            <RelativeLayout
                android:layout_marginTop="30px"
                android:background="@drawable/gray_10round"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:background="@color/gray"
                    android:visibility="visible"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="120px"/>
                <thinku.com.word.view.wheelView.WheelView
                    android:id="@+id/wheel_start"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:textColorCenter="@color/mainColor"
                    app:lineSpaceingDimens="20px"
                    app:itemVisibleNum="11"
                    app:lineColor="@android:color/transparent"
                    app:textSizeCenter="30px"
                    app:textSizeOuter="30px"
                    app:isLoop="false"
                    app:textColorOuter="@android:color/darker_gray"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_marginTop="49px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@color/gray_white"
            android:layout_width="80px"
            android:layout_height="2px"/>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0px"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/end_time"
                android:textSize="45px"
                android:textColor="@color/white"
                android:text="2018.01.21"
                android:gravity="center"
                android:background="@drawable/main_10round_tv"
                android:layout_width="match_parent"
                android:layout_height="100px" />
            <RelativeLayout
                android:layout_marginTop="30px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:background="@drawable/gray_10round"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:background="@color/gray"
                    android:visibility="visible"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="120px"/>
                <thinku.com.word.view.wheelView.WheelView
                    android:id="@+id/wheel_end"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:textColorCenter="@color/mainColor"
                    app:lineSpaceingDimens="20px"
                    app:itemVisibleNum="11"
                    app:lineColor="@android:color/transparent"
                    app:textSizeCenter="30px"
                    app:textSizeOuter="30px"
                    app:isLoop="false"
                    app:textColorOuter="@android:color/darker_gray"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>