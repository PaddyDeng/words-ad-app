<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/mnemonic"
            android:lineSpacingExtra="16dp"
            android:lineSpacingMultiplier="0.5"
            android:paddingTop="10dp"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:id="@+id/bg"
            android:layout_below="@id/mnemonic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bg"
            android:layout_marginTop="-10dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/data_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bg"
            android:layout_marginTop="-15dp"
            android:layout_marginBottom="75dp"
            android:background="@color/color_bg_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/data_list"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="词  列"
            android:textColor="@color/gray_text"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/bottom_click"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/know"
                style="@style/button_word_evaluate"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg_green"
                android:text="认识" />

            <Button
                android:id="@+id/unknow"
                style="@style/button_word_evaluate"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg_yellow"
                android:text="不认识" />

            <Button
                android:id="@+id/blurry"
                style="@style/button_word_evaluate"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg_blue"
                android:text="模糊" />
        </LinearLayout>

    </RelativeLayout>