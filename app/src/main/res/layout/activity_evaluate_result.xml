<?xml version="1.0" encoding="utf-8"?>
<!--未完成-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/title_layout_share"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:background="@color/mainColor"
            android:layout_width="match_parent"
            android:layout_height="500px"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="700px"/>
            <LinearLayout
                android:layout_marginLeft="80px"
                android:layout_marginRight="80px"
                android:layout_marginTop="40px"
                android:background="@drawable/evaluate_result_20round"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/know_rl"
                    android:layout_width="match_parent"
                    android:layout_height="120px">
                    <View
                        android:id="@+id/v1"
                        android:background="@drawable/evaluate_main_side"
                        android:layout_width="25px"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/tv1"
                        android:layout_marginLeft="50px"
                        android:text="认识"
                        android:textSize="45px"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/v1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/know_num"
                        android:layout_toRightOf="@+id/tv1"
                        android:layout_marginLeft="40px"
                        android:layout_centerVertical="true"
                        android:text="(0)"
                        android:textSize="45px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:background="@color/black"
                        android:layout_marginRight="30px"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="45px"
                        android:layout_height="45px" />
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/know_list"
                    android:layout_marginBottom="20px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="80px"
                android:layout_marginRight="80px"
                android:layout_marginTop="30px"
                android:background="@drawable/evaluate_result_20round"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120px">
                    <View
                        android:id="@+id/v2"
                        android:background="@drawable/evaluate_yellow_side"
                        android:layout_width="25px"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/tv2"
                        android:layout_marginLeft="50px"
                        android:text="不认识"
                        android:textSize="45px"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/v2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/unknow_num"
                        android:layout_toRightOf="@+id/tv2"
                        android:layout_marginLeft="40px"
                        android:layout_centerVertical="true"
                        android:text="(0)"
                        android:textSize="45px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/ranking"
                android:textSize="45px"
                android:textColor="@color/white"
                android:text="查看最新评估排名"
                android:gravity="center"
                android:layout_marginTop="60px"
                android:layout_marginLeft="80px"
                android:layout_marginRight="80px"
                android:layout_marginBottom="80px"
                android:background="@drawable/main_20round_tv"
                android:layout_width="match_parent"
                android:layout_height="120px" />
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</LinearLayout>