<?xml version="1.0" encoding="utf-8"?><!--未完成-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_layout_share" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:background="@color/mainColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="700px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80px"
                    android:layout_marginRight="80px"
                    android:layout_marginTop="40px"
                    android:background="@drawable/evaluate_result_20round"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/know_rl"
                        android:layout_width="match_parent"
                        android:layout_height="120px">

                        <View
                            android:id="@+id/v1"
                            android:layout_width="25px"
                            android:layout_height="match_parent"
                            android:background="@drawable/evaluate_main_side" />

                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="50px"
                            android:layout_toRightOf="@+id/v1"
                            android:text="认识"
                            android:textSize="45px" />

                        <TextView
                            android:id="@+id/know_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40px"
                            android:layout_toRightOf="@+id/tv1"
                            android:text="(0)"
                            android:textSize="45px" />

                        <ImageView
                            android:layout_width="45px"
                            android:layout_height="45px"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="30px"
                            android:background="@color/black" />
                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/know_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80px"
                    android:layout_marginRight="80px"
                    android:layout_marginTop="30px"
                    android:background="@drawable/evaluate_result_20round"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="120px">

                        <View
                            android:id="@+id/v2"
                            android:layout_width="25px"
                            android:layout_height="match_parent"
                            android:background="@drawable/evaluate_yellow_side" />

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="50px"
                            android:layout_toRightOf="@+id/v2"
                            android:text="不认识"
                            android:textSize="45px" />

                        <TextView
                            android:id="@+id/unknow_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40px"
                            android:layout_toRightOf="@+id/tv2"
                            android:text="(0)"
                            android:textSize="45px" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/ranking"
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:layout_marginBottom="80px"
                    android:layout_marginLeft="80px"
                    android:layout_marginRight="80px"
                    android:layout_marginTop="60px"
                    android:background="@drawable/main_20round_tv"
                    android:gravity="center"
                    android:text="查看最新评估排名"
                    android:textColor="@color/white"
                    android:textSize="45px" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>