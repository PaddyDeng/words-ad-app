<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_layout_share" />
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <thinku.com.word.weight.overscroll.FastAndOverScrollScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="250dp"
                android:layout_marginBottom="70dp">
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/mainColor" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@mipmap/eva_result_bg"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/imageView" />
                    <thinku.com.word.view.FuckView
                        android:layout_width="350dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="55dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="100dp"
                        android:id="@+id/result"
                        />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/head_image"
                        android:layout_marginLeft="60dp"
                        android:layout_alignTop="@+id/name"
                        android:layout_alignStart="@+id/imageView"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        style="@style/wrap"
                        android:id="@+id/name"
                        android:text="Tina小姐姐"
                        android:textSize="15sp"
                        android:layout_toRightOf="@id/head_image"
                        android:layout_marginTop="110dp"
                        android:layout_marginLeft="20dp"
                        />

                    <TextView
                        style="@style/wrap"
                        android:id="@+id/level"
                        android:text="大学四级"
                        android:textSize="17sp"
                        android:textColor="@color/mainColor"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/name"
                        android:layout_toRightOf="@id/head_image"
                       android:layout_alignLeft="@id/name"
                        />

                    <TextView
                        style="@style/wrap"
                        android:text="水平"
                        android:textSize="13dp"
                        android:layout_toRightOf="@id/level"
                        android:layout_alignBottom="@id/level"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        style="@style/wrap"
                        android:text="打败全国大约"
                        android:id="@+id/text1"
                        android:textSize="15sp"
                        android:layout_alignLeft="@id/level"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/level"
                        />

                    <TextView
                        style="@style/wrap"
                        android:text="50%"
                        android:textSize="14sp"
                        android:layout_alignTop="@id/text1"
                        android:layout_toRightOf="@id/text1"
                        android:textColor="@color/mainColor"
                        android:layout_below="@id/level"
                        android:id="@+id/recent"
                        />

                    <TextView
                        style="@style/wrap"
                        android:text="的用户"
                        android:textSize="14sp"
                        android:layout_alignTop="@id/text1"
                        android:layout_toRightOf="@id/recent"
                        />
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80px"
                    android:layout_marginRight="80px"
                    android:layout_marginTop="40px"
                    android:background="@drawable/evaluate_result_20round"
                    android:orientation="vertical">

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/know_rl"
                        android:layout_width="match_parent"
                        android:layout_height="120px">

                        <View
                            android:id="@+id/v1"
                            android:layout_width="25px"
                            android:layout_height="match_parent"
                            android:background="@drawable/evaluate_main_side" />

                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="50px"
                            android:layout_toRightOf="@+id/v1"
                            android:text="认识"
                            android:textSize="45px" />

                        <TextView
                            android:id="@+id/know_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40px"
                            android:layout_toRightOf="@+id/tv1"
                            android:text="(0)"
                            android:textSize="45px" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="30px"
                            android:id="@+id/down_title"
                            android:background="@mipmap/down_title" />
                    </com.zhy.autolayout.AutoRelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/know_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/evaluate_result"
                        />

                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80px"
                    android:layout_marginRight="80px"
                    android:layout_marginTop="30px"
                    android:background="@drawable/evaluate_result_20round"
                    android:orientation="vertical">

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="120px">

                        <View
                            android:id="@+id/v2"
                            android:layout_width="25px"
                            android:layout_height="match_parent"
                            android:background="@drawable/evaluate_yellow_side" />

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="50px"
                            android:layout_toRightOf="@+id/v2"
                            android:text="不认识"
                            android:textSize="45px" />

                        <TextView
                            android:id="@+id/unknow_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40px"
                            android:layout_toRightOf="@+id/tv2"
                            android:text="(0)"
                            android:textSize="45px" />
                    </com.zhy.autolayout.AutoRelativeLayout>

                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>
            </thinku.com.word.weight.overscroll.FastAndOverScrollScrollView>
            <TextView
                android:id="@+id/ranking"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/main_10round_tv"
                android:gravity="center"
                android:text="查看最新评估排名"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_alignParentBottom="true" />
        </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>