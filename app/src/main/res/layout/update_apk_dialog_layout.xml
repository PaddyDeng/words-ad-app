<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/border_space_sec_max_m"
        android:paddingRight="@dimen/border_space_sec_max_m"
        android:paddingTop="@dimen/border_space_sec_max"
        android:text="@string/str_update_apk_title"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium"/>

    <TextView
        android:id="@+id/simple_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="@dimen/border_space_sec_max_m"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/color_sec_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_simple_btn_cancel"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dip"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/border_space_sec_max"
            android:paddingTop="@dimen/border_space_sec_max"
            android:text="@string/str_update_apk_imme"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_ms"/>

        <TextView
            android:id="@+id/dialog_simple_btn_confirm"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/border_space_sec_max"
            android:paddingTop="@dimen/border_space_sec_max"
            android:text="@string/str_update_apk_wait"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_ms"/>

    </LinearLayout>

</LinearLayout>