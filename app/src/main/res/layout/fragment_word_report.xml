<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:background="@color/gray_white"
            android:layout_width="match_parent"
            android:layout_height="30px"/>
        <TextView
            android:text="周报"
            android:textSize="45px"
            android:layout_marginTop="20px"
            android:layout_marginLeft="60px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <thinku.com.word.view.PieView
            android:layout_gravity="center_horizontal"
            android:layout_width="330px"
            android:layout_height="330px" />
        <TextView
            android:id="@+id/total_num"
            android:layout_marginTop="60px"
            android:text="总量：0"
            android:textSize="35px"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="40px"
            android:layout_marginLeft="200px"
            android:layout_marginRight="200px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <View
                        android:background="@drawable/familiar_dot"
                        android:layout_width="20px"
                        android:layout_height="20px"/>
                    <TextView
                        android:layout_marginLeft="20px"
                        android:text="熟食量"
                        android:textSize="35px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/familiar_num"
                        android:text="0"
                        android:layout_marginLeft="40px"
                        android:textSize="35px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20px"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <View
                        android:background="@drawable/vague_dot"
                        android:layout_width="20px"
                        android:layout_height="20px"/>
                    <TextView
                        android:layout_marginLeft="20px"
                        android:text="模糊量"
                        android:textSize="35px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/vague_num"
                        android:text="0"
                        android:layout_marginLeft="40px"
                        android:textSize="35px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <View
                        android:background="@drawable/know_dot"
                        android:layout_width="20px"
                        android:layout_height="20px"/>
                    <TextView
                        android:layout_marginLeft="20px"
                        android:text="认识量"
                        android:textSize="35px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/know_num"
                        android:text="0"
                        android:layout_marginLeft="40px"
                        android:textSize="35px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20px"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <View
                        android:background="@drawable/forget_dot"
                        android:layout_width="20px"
                        android:layout_height="20px"/>
                    <TextView
                        android:layout_marginLeft="20px"
                        android:text="忘记量"
                        android:textSize="35px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/forget_num"
                        android:text="0"
                        android:layout_marginLeft="40px"
                        android:textSize="35px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_marginTop="40px"
            android:background="@color/gray_white"
            android:layout_width="match_parent"
            android:layout_height="50px"/>
        <RelativeLayout
            android:layout_marginTop="40px"
            android:layout_width="match_parent"
            android:layout_height="60px">
            <TextView
                android:text="月报"
                android:textSize="45px"
                android:layout_marginLeft="60px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/date"
                android:textSize="40px"
                android:text="9月30日-10月30日"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/setting_date"
                android:background="@color/black"
                android:layout_marginRight="50px"
                android:layout_alignParentRight="true"
                android:layout_width="60px"
                android:layout_height="60px" />
        </RelativeLayout>
        <TextView
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="统计图"
            android:layout_width="match_parent"
            android:layout_height="600px" />
    </LinearLayout>
</ScrollView>