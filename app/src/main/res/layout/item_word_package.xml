<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/word_package_bg"
    android:id="@+id/rl">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/word_package_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/gmat" />

    <TextView
        android:id="@+id/word_package_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="GMAT"
        android:textColor="@color/gray_text"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/word_package_img"
        android:layout_marginStart="23dp" />

    <thinku.com.word.view.DashView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:dashWidth = "1dp"
        app:lineWidth="3dp"
        app:lineHeight="1px"
        app:dashOrientation="0"
        android:layout_alignParentBottom="true"
        app:lineColor="@color/interal"
        />
</com.zhy.autolayout.AutoRelativeLayout>