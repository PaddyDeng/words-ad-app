<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include android:id="@+id/title"
        layout="@layout/title_layout"/>

    <thinku.com.word.weight.overscroll.FastAndOverScrollScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:background="@mipmap/person_bg_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title">

            <!--用户信息-->
            <LinearLayout
                android:background="@drawable/white_20round"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_height="350px"
                android:layout_marginTop="250px">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/portrait"
                    android:layout_marginLeft="200px"
                    android:layout_width="200px"
                    android:layout_height="200px" />
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/name"
                        android:textSize="50px"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/setting"
                        android:text="编辑用户详细资料 >"
                        android:layout_marginTop="20px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <!--用户操作-->
            <LinearLayout
                android:layout_marginTop="40px"
                android:background="@drawable/white_10round"
                android:layout_width="match_parent"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_height="700px">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0px"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:id="@+id/type_setting"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0px">
                        <LinearLayout
                            android:layout_centerInParent="true"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <ImageView
                            android:background="@mipmap/study"
                            android:layout_width="100px"
                            android:layout_height="100px" />
                            <TextView
                                android:text="学习模式"
                                android:layout_marginLeft="40px"
                                android:textSize="50px"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </RelativeLayout>
                    <View
                        android:background="@color/gray_white"
                        android:layout_width="match_parent"
                        android:layout_height="2px"/>
                    <RelativeLayout
                        android:id="@+id/sign"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0px">
                        <LinearLayout
                            android:layout_centerInParent="true"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:background="@mipmap/person_punch"
                                android:layout_width="100px"
                                android:layout_height="100px" />
                            <TextView
                                android:text="打卡签到"
                                android:layout_marginLeft="40px"
                                android:textSize="50px"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </RelativeLayout>
                    <View
                        android:background="@color/gray_white"
                        android:layout_width="match_parent"
                        android:layout_height="2px"/>

                    <RelativeLayout
                        android:id="@+id/feedback"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="100px"
                                android:layout_height="100px"
                                android:background="@mipmap/feedback" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40px"
                                android:text="意见反馈"
                                android:textColor="@color/black"
                                android:textSize="50px" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:background="@color/gray_white"
                    android:layout_width="2px"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0px"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:id="@+id/clock"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0px">
                        <LinearLayout
                            android:layout_centerInParent="true"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:background="@mipmap/review_clock"
                                android:layout_width="100px"
                                android:layout_height="100px" />
                            <TextView
                                android:text="复习闹钟"
                                android:layout_marginLeft="40px"
                                android:textSize="50px"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </RelativeLayout>
                    <View
                        android:background="@color/gray_white"
                        android:layout_width="match_parent"
                        android:layout_height="2px"/>
                    <RelativeLayout
                        android:id="@+id/night"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0px">
                        <LinearLayout
                            android:layout_centerInParent="true"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:background="@mipmap/night"
                                android:layout_width="100px"
                                android:layout_height="100px" />
                            <TextView
                                android:text="READ ME"
                                android:layout_marginLeft="40px"
                                android:textSize="50px"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </RelativeLayout>
                    <View
                        android:background="@color/gray_white"
                        android:layout_width="match_parent"
                        android:layout_height="2px"/>
                    <RelativeLayout
                        android:id="@+id/service"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0px">
                        <LinearLayout
                            android:layout_centerInParent="true"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:background="@mipmap/praise"
                                android:layout_width="100px"
                                android:layout_height="100px" />
                            <TextView
                                android:text="五星好评"
                                android:layout_marginLeft="40px"
                                android:textSize="50px"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </thinku.com.word.weight.overscroll.FastAndOverScrollScrollView>
</LinearLayout>