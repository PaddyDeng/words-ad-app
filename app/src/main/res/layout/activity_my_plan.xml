<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_shallow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30px"
            android:text="已选词包"
            android:textColor="@color/black"
            android:textSize="45px" />

        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="30px"
            android:text="编辑"
            android:textSize="45px" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/words_bag_list"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_below="@+id/edit"
            android:layout_marginBottom="40px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginBottom="120px"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:layout_marginTop="100px"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/num_of_day"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:background="@drawable/main_10round_tv"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="45px" />

            <RelativeLayout
                android:id="@+id/wheelView_rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30px"
                android:background="@drawable/gray_20round"></RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginBottom="120px"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:layout_marginTop="100px"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/num_of_word"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:background="@drawable/main_10round_tv"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="45px" />

            <RelativeLayout
                android:id="@+id/wheelView_r2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30px"
                android:background="@drawable/gray_20round"></RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>