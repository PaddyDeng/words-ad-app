<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_layout"/>
    <RelativeLayout
        android:background="@color/gray_shallow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="30px"
            android:textColor="@color/black"
            android:text="已选词包"
            android:textSize="45px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/edit"
            android:layout_margin="30px"
            android:textSize="45px"
            android:text="编辑"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/words_bag_list"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginBottom="40px"
            android:layout_below="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="200px"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:layout_marginTop="100px"
            android:layout_marginBottom="120px"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/num_of_day"
                android:gravity="center"
                android:text="4天"
                android:textColor="@color/white"
                android:textSize="45px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:background="@drawable/main_10round_tv"
                android:layout_width="match_parent"
                android:layout_height="100px" />
            <RelativeLayout
                android:layout_marginTop="30px"
                android:background="@drawable/gray_20round"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:background="@color/gray"
                    android:visibility="visible"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="120px"/>
                <thinku.com.word.view.wheelView.WheelView
                    android:id="@+id/wheel_day"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:textColorCenter="@color/mainColor"
                    app:lineSpaceingDimens="20px"
                    app:itemVisibleNum="11"
                    app:lineColor="@android:color/transparent"
                    app:textSizeCenter="35px"
                    app:textSizeOuter="35px"
                    app:isLoop="false"
                    app:textColorOuter="@android:color/darker_gray"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:layout_marginTop="100px"
            android:layout_marginBottom="120px"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/num_of_word"
                android:gravity="center"
                android:text="8个"
                android:textColor="@color/white"
                android:textSize="45px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:background="@drawable/main_10round_tv"
                android:layout_width="match_parent"
                android:layout_height="100px" />
            <RelativeLayout
                android:layout_marginTop="30px"
                android:background="@drawable/gray_20round"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:background="@color/gray"
                    android:visibility="visible"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="120px"/>
                <thinku.com.word.view.wheelView.WheelView
                    android:id="@+id/wheel_num"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:textColorCenter="@color/mainColor"
                    app:lineSpaceingDimens="20px"
                    app:itemVisibleNum="11"
                    app:lineColor="@android:color/transparent"
                    app:textSizeCenter="35px"
                    app:textSizeOuter="35px"
                    app:isLoop="false"
                    app:textColorOuter="@android:color/darker_gray"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>