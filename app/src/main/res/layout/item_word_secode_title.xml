<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/word_package_bg"
    android:id="@+id/rl"
    android:layout_marginTop="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:textColor="@color/white"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:background="@mipmap/triangle1"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_img"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginLeft="60px"
        android:layout_marginTop="100px"
        android:src="@color/dark_gray" />

    <TextView
        android:id="@+id/word_package_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:layout_marginTop="75px"
        android:layout_toEndOf="@id/circle_img"
        android:text="阅读"
        android:textColor="@drawable/word_package_text"
         />

    <thinku.com.word.view.LoadingCustomView
        android:id="@+id/word_package_progress"
        android:layout_width="300px"
        android:layout_height="35px"
        android:layout_alignStart="@id/circle_img"
        android:layout_marginTop="5dp"
        android:layout_below="@id/word_package_title"
        />
</RelativeLayout>