<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/personal_detail"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="40px"
            android:textSize="45px"
            android:gravity="center_vertical"
            android:text="个人信息"
            android:background="@color/gray_white"
            android:layout_width="match_parent"
            android:layout_height="120px" />
        <RelativeLayout
            android:id="@+id/portrait_rl"
            android:layout_width="match_parent"
            android:layout_height="120px">
            <TextView
                android:layout_marginLeft="40px"
                android:textSize="45px"
                android:text="头像"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/portrait"
                android:background="@color/black"
                android:layout_marginRight="40px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="80px"
                android:layout_height="80px" />
            <View
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_white"
                android:layout_width="match_parent"
                android:layout_height="2px"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/name_rl"
            android:layout_width="match_parent"
            android:layout_height="120px">
            <TextView
                android:layout_marginLeft="40px"
                android:textSize="45px"
                android:text="用户名"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@color/black"
                android:layout_marginRight="40px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="60px"
                android:layout_height="60px" />
            <TextView
                android:id="@+id/name"
                android:textSize="45px"
                android:layout_marginRight="150px"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_white"
                android:layout_width="match_parent"
                android:layout_height="2px"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/nick_rl"
            android:layout_width="match_parent"
            android:layout_height="120px">
            <TextView
                android:layout_marginLeft="40px"
                android:textSize="45px"
                android:text="昵称"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@color/black"
                android:layout_marginRight="40px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="60px"
                android:layout_height="60px" />
            <TextView
                android:id="@+id/nick"
                android:textSize="45px"
                android:layout_marginRight="150px"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_white"
                android:layout_width="match_parent"
                android:layout_height="2px"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/phone_rl"
            android:layout_width="match_parent"
            android:layout_height="120px">
            <TextView
                android:layout_marginLeft="40px"
                android:textSize="45px"
                android:text="电话"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@color/black"
                android:layout_marginRight="40px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="60px"
                android:layout_height="60px" />
            <TextView
                android:id="@+id/phone"
                android:textSize="45px"
                android:layout_marginRight="150px"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_white"
                android:layout_width="match_parent"
                android:layout_height="2px"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/email_rl"
            android:layout_width="match_parent"
            android:layout_height="120px">
            <TextView
                android:layout_marginLeft="40px"
                android:textSize="45px"
                android:text="邮箱"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@color/black"
                android:layout_marginRight="40px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="60px"
                android:layout_height="60px" />
            <TextView
                android:id="@+id/email"
                android:textSize="45px"
                android:layout_marginRight="150px"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_white"
                android:layout_width="match_parent"
                android:layout_height="2px"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/pass_rl"
            android:layout_width="match_parent"
            android:layout_height="120px">
            <TextView
                android:layout_marginLeft="40px"
                android:textSize="45px"
                android:text="密码"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@color/black"
                android:layout_marginRight="40px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="60px"
                android:layout_height="60px" />
            <TextView
                android:id="@+id/pass"
                android:textSize="45px"
                android:layout_marginRight="150px"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
            <LinearLayout
                android:id="@+id/about"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingLeft="40px"
                    android:textSize="45px"
                    android:gravity="center_vertical"
                    android:text="关于我们"
                    android:background="@color/gray_white"
                    android:layout_width="match_parent"
                    android:layout_height="120px" />
                <RelativeLayout
                    android:id="@+id/website_rl"
                    android:layout_width="match_parent"
                    android:layout_height="120px">
                    <TextView
                        android:layout_marginLeft="40px"
                        android:textSize="45px"
                        android:text="官方网站"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:background="@color/black"
                        android:layout_marginRight="40px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="60px"
                        android:layout_height="60px" />
                    <TextView
                        android:id="@+id/website"
                        android:textSize="45px"
                        android:text="www.gmatonline.cn"
                        android:layout_marginRight="150px"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_marginLeft="40px"
                        android:layout_marginRight="40px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/gray_white"
                        android:layout_width="match_parent"
                        android:layout_height="2px"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/wechat_rl"
                    android:layout_width="match_parent"
                    android:layout_height="120px">
                    <TextView
                        android:layout_marginLeft="40px"
                        android:textSize="45px"
                        android:text="微信公众号"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/wechat"
                        android:textSize="45px"
                        android:text="LGclub"
                        android:layout_marginRight="40px"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_marginLeft="40px"
                        android:layout_marginRight="40px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/gray_white"
                        android:layout_width="match_parent"
                        android:layout_height="2px"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/qq_rl"
                    android:layout_width="match_parent"
                    android:layout_height="120px">
                    <TextView
                        android:layout_marginLeft="40px"
                        android:textSize="45px"
                        android:text="雷哥GMAT QQ备考群"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/qq"
                        android:textSize="45px"
                        android:layout_marginRight="40px"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_marginLeft="40px"
                        android:layout_marginRight="40px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/gray_white"
                        android:layout_width="match_parent"
                        android:layout_height="2px"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:background="@color/gray_white"
                android:layout_width="match_parent"
                android:layout_height="40px"/>
            <RelativeLayout
                android:id="@+id/version_rl"
                android:layout_width="match_parent"
                android:layout_height="120px">
                <TextView
                    android:layout_marginLeft="40px"
                    android:textSize="45px"
                    android:text="版本检测"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:background="@color/black"
                    android:layout_marginRight="40px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="60px"
                    android:layout_height="60px" />
                <TextView
                    android:id="@+id/version"
                    android:textSize="45px"
                    android:layout_marginRight="150px"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="40px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray_white"
                    android:layout_width="match_parent"
                    android:layout_height="2px"/>
            </RelativeLayout>
            <View
                android:background="@color/gray_white"
                android:layout_width="match_parent"
                android:layout_height="40px"/>
            <RelativeLayout
                android:id="@+id/font_rl"
                android:layout_width="match_parent"
                android:layout_height="120px">
                <TextView
                    android:layout_marginLeft="40px"
                    android:textSize="45px"
                    android:text="字体大小"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:background="@color/black"
                    android:layout_marginRight="40px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="60px"
                    android:layout_height="60px" />
                <TextView
                    android:id="@+id/font"
                    android:textSize="45px"
                    android:layout_marginRight="150px"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="40px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray_white"
                    android:layout_width="match_parent"
                    android:layout_height="2px"/>
            </RelativeLayout>
            <View
                android:background="@color/gray_white"
                android:layout_width="match_parent"
                android:layout_height="40px"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>