<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_interval_line">

    <include layout="@layout/title_layout"
        android:id="@+id/title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:textColor="@color/white"
        android:background="@color/mainColor"
        android:text="退出当前账户"
        android:textSize="50px"
        android:gravity="center"
        android:layout_alignParentBottom="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/title">

            <LinearLayout
                android:id="@+id/personal_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:background="@color/gray_white"
                    android:gravity="center_vertical"
                    android:paddingLeft="40px"
                    android:text="个人信息"
                    android:textSize="45px" />

                <RelativeLayout
                    android:id="@+id/portrait_rl"
                    android:layout_width="match_parent"
                    android:layout_height="120px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40px"
                        android:text="头像"
                        android:textColor="@color/black"
                        android:textSize="45px" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/portrait"
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="40px"
                        android:layout_marginRight="40px"
                        android:background="@color/gray_white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/name_rl"
                    android:layout_width="match_parent"
                    android:layout_height="120px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40px"
                        android:text="用户名"
                        android:textColor="@color/black"
                        android:textSize="45px" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:background="@mipmap/right_arrow" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="150px"
                        android:textSize="45px" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="40px"
                        android:layout_marginRight="40px"
                        android:background="@color/gray_white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/nick_rl"
                    android:layout_width="match_parent"
                    android:layout_height="120px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40px"
                        android:text="昵称"
                        android:textColor="@color/black"
                        android:textSize="45px" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:background="@mipmap/right_arrow" />

                    <TextView
                        android:id="@+id/nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="150px"
                        android:textSize="45px" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="40px"
                        android:layout_marginRight="40px"
                        android:background="@color/gray_white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/phone_rl"
                    android:layout_width="match_parent"
                    android:layout_height="120px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40px"
                        android:text="电话"
                        android:textColor="@color/black"
                        android:textSize="45px" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:background="@mipmap/right_arrow" />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="150px"
                        android:textSize="45px" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="40px"
                        android:layout_marginRight="40px"
                        android:background="@color/gray_white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/email_rl"
                    android:layout_width="match_parent"
                    android:layout_height="120px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40px"
                        android:text="邮箱"
                        android:textColor="@color/black"
                        android:textSize="45px" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:background="@mipmap/right_arrow" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="150px"
                        android:textSize="45px" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="40px"
                        android:layout_marginRight="40px"
                        android:background="@color/gray_white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/pass_rl"
                    android:layout_width="match_parent"
                    android:layout_height="120px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40px"
                        android:text="密码"
                        android:textColor="@color/black"
                        android:textSize="45px" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:background="@mipmap/right_arrow" />

                    <TextView
                        android:id="@+id/pass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="150px"
                        android:textSize="45px" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:background="@color/gray_white" />

            <RelativeLayout
                android:id="@+id/version_rl"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40px"
                    android:text="版本检测"
                    android:textColor="@color/black"
                    android:textSize="45px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40px"
                    android:background="@mipmap/right_arrow" />

                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="150px"
                    android:textSize="45px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="40px"
                    android:background="@color/gray_white" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:background="@color/gray_white" />

            <RelativeLayout
                android:id="@+id/font_rl"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="120px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40px"
                    android:text="字体大小"
                    android:textColor="@color/black"
                    android:textSize="45px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40px"
                    android:background="@mipmap/right_arrow" />

                <TextView
                    android:id="@+id/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="150px"
                    android:textSize="45px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="40px"
                    android:background="@color/gray_white" />
            </RelativeLayout>

        </LinearLayout>
</RelativeLayout>