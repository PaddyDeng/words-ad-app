<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/now_type"
        android:layout_marginTop="30dp"
        android:layout_width="190dp"
        android:textSize="45px"
        tool:text="你还未选择记忆模式"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/change_type"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@mipmap/change_memory_mode"
            android:layout_width="50px"
            android:layout_height="50px" />
        <TextView
        android:textColor="@color/mainColor"
        android:textSize="45px"
        android:layout_marginLeft="10px"
        android:text="点击更改记忆模式"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="40px"
        android:layout_marginLeft="150px"
        android:layout_marginRight="150px"
        android:background="@drawable/gray_round_ll"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="700px">
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@mipmap/a1"
            android:layout_marginTop="150px"
            android:layout_width="250px"
            android:layout_height="250px" />
        <TextView
            android:text="你还未选择单词计划"
            android:textSize="50px"
            android:layout_marginTop="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/word_depot"
        android:textSize="50px"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="进入词库"
        android:background="@drawable/main_20round_tv"
        android:layout_marginTop="30dp"
        android:layout_marginRight="150px"
        android:layout_marginLeft="150px"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>