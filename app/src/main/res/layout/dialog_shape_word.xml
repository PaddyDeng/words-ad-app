<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <TextView
        android:id="@+id/word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/mainColor"
        android:gravity="center_horizontal"
        tools:text ="admininstrator"
        android:background="@color/white"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="5dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="@color/white"
        android:id="@+id/play">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/word_broadcast"
            android:padding="5dp" />

        <TextView
            android:id="@+id/phonogram"
            android:layout_width="wrap_content"
            android:maxWidth="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/mainColor"
            android:layout_marginRight="20dp"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textColor="@color/gray_text"
        android:textSize="13sp"
        tools:text="fdasfasfsafasfafafsf"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <RelativeLayout
        android:id="@+id/sentences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:paddingTop="10dp"
        android:background="@color/white">

    <ImageView
        android:id="@+id/image3"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/triangle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/image3"
        android:text="例句"
        android:textColor="@color/mainColor" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sentences_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="5dp"
        android:visibility="visible"
        android:background="@color/white"
        android:layout_marginBottom="10dp"
        />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/cancel_share"
        android:id="@+id/cancel"
        android:layout_marginTop="30dp"/>
</LinearLayout>