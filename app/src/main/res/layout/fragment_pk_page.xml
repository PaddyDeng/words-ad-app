<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_white"
        android:layout_width="match_parent"
        android:layout_height="200px">
        <TextView
            android:id="@+id/to_pk"
            android:textSize="50px"
            android:textColor="@color/white"
            android:text="立即PK"
            android:gravity="center"
            android:background="@drawable/main_10round_tv"
            android:layout_marginTop="40px"
            android:layout_marginBottom="40px"
            android:layout_marginLeft="160px"
            android:layout_marginRight="160px"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
   <ScrollView
       android:layout_above="@+id/ll"
       android:scrollbars="none"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:orientation="vertical"
           android:background="@color/white"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="250px">
               <ImageView
                   android:id="@+id/portrait"
                   android:background="@color/colorAccent"
                   android:layout_marginLeft="60px"
                   android:layout_centerVertical="true"
                   android:layout_width="160px"
                   android:layout_height="160px" />
               <LinearLayout
                   android:layout_marginLeft="30px"
                   android:layout_toRightOf="@+id/portrait"
                   android:layout_centerVertical="true"
                   android:orientation="vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/name"
                       android:text="名字"
                       android:textSize="45px"
                       android:textColor="@color/dark_gray"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <thinku.com.word.view.ProgressView
                       android:id="@+id/winning_probability"
                       android:layout_marginTop="30px"
                       android:layout_width="500px"
                       android:layout_height="40px" />
                    <RelativeLayout
                        android:layout_marginTop="10px"
                        android:layout_width="500px"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_centerVertical="true"
                            android:id="@+id/iv1"
                            android:background="@color/black"
                            android:layout_width="50px"
                            android:layout_height="50px" />
                        <TextView
                            android:id="@+id/win_num"
                            android:layout_centerVertical="true"
                            android:text="win:0"
                            android:textSize="40px"
                            android:textColor="@color/win_yellow"
                            android:layout_toRightOf="@+id/iv1"
                            android:layout_marginLeft="10px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/lose_num"
                            android:text="lose:0"
                            android:textSize="40px"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_marginRight="10px"
                            android:layout_toLeftOf="@+id/lose_num"
                            android:layout_centerVertical="true"
                            android:background="@color/black"
                            android:layout_width="50px"
                            android:layout_height="50px" />
                    </RelativeLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_marginRight="60px"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   android:orientation="vertical"
                   android:gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <TextView
                       android:text="词汇量"
                       android:textSize="35px"
                       android:textColor="@color/dark_gray"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:id="@+id/vocabulary"
                       android:text="0"
                       android:layout_marginTop="10px"
                       android:textSize="60px"
                       android:textColor="@color/mainColor"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </LinearLayout>
           </RelativeLayout>
           <RelativeLayout
               android:background="@color/gray_white"
               android:layout_width="match_parent"
               android:layout_height="200px">
               <View
                   android:background="@color/white"
                   android:layout_alignParentBottom="true"
                   android:layout_width="match_parent"
                   android:layout_height="120px"/>
               <ImageView
                   android:background="@color/black"
                   android:layout_centerInParent="true"
                   android:layout_width="400px"
                   android:layout_height="160px" />
           </RelativeLayout>
           <android.support.v7.widget.RecyclerView
               android:id="@+id/ranking_list"
               android:layout_width="match_parent"
               android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
       </LinearLayout>
   </ScrollView>

</RelativeLayout>